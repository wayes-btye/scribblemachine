# App Configuration
NODE_ENV=development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_URL=https://generativelanguage.googleapis.com

# Database Configuration (for pg-boss)
DATABASE_URL=your_postgres_connection_string

# Storage Configuration
STORAGE_TTL_ORIGINALS_DAYS=30
STORAGE_TTL_INTERMEDIATES_HOURS=48
STORAGE_TTL_ARTIFACTS_DAYS=90

# Processing Limits
MAX_UPLOAD_SIZE_MB=10
MAX_IMAGE_DIMENSIONS=4096
MAX_PIXELS=24000000

# Worker Configuration
WORKER_CONCURRENCY_INGEST=2
WORKER_CONCURRENCY_GENERATION=1
WORKER_CONCURRENCY_PDF=2

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info